---
import features from "../../config/features.json";
---

<h2 class="text-center font-bold mt-10 text-5xl">Features</h2>
<section class="grid grid-col-1 md:grid-cols-3 gap-4 p-4">
    {
        features.map((feature) => (
            <article class="bg-slate-800 p-10 rounded-xl">
                <h2 class="text-2xl font-bold">{feature.title}</h2>
                <p>{feature.description}</p>
            </article>
        ))
    }
</section>
